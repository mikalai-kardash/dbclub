{
    "exclude": [
        "node_modules",
        "./src/**/*.spec.ts",
        "./src/**/testing/**/*.ts"
    ],
    "include": [
        "./src/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "./dist/",
        "alwaysStrict": true,
        "moduleResolution": "node",
        "newLine": "CRLF",
        "target": "es6",
        "module": "commonjs",
        "baseUrl": "./src/",
        "sourceMap": true,
        "skipLibCheck": true
    }
}
