docker run \
    --link dbclub_db_1:db \
    --network $(docker network ls -f name=dbclub* --format "{{.ID}}") \
    -it \
    --rm \
    -v $(pwd)/test_db:/test_db \
    mysql:5.7 sh -c 'cd /test_db && mysql -hdb -uroot -proot-password < /test_db/employees.sql'

